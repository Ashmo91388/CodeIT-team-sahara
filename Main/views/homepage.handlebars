<div>
  <img src="" alt="current user avatar">
</div>
<div class="col-md-6">
    <h3>Post New Code:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name">{{text}}</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>
<div id="feed">
  {{#each posts}} 
    <div class="post">
      <div class="post-toprow">
        <img src="{{this.user_avatar}}" alt="author avatar"> 
        <span>{{this.username}}</span>
      </div>
      <p>{{this.content}}</p>
      {{#if this.image}}
        <img src="{{this.image}}" alt="post image">
      {{/if}}
      <p>{{this.date_created}}</p>
    </div>
  {{/each}}
</div>